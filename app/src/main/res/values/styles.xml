<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">@color/black</item>
        <item name="appBarLayoutStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="Confirmed">
        <item name="android:textColor">@color/cases</item>
    </style>
    <style name="Deaths">
        <item name="android:textColor">@color/deaths</item>
    </style>
    <style name="Recovered">
        <item name="android:textColor">@color/recovered</item>
    </style>
    <style name="Active">
        <item name="android:textColor">@color/active</item>
    </style>
    <style name="Critical">
        <item name="android:textColor">@color/critical</item>
    </style>

</resources>